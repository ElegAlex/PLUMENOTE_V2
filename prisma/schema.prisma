// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// Auth.js v5 Models
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials provider (hashed with bcrypt cost >= 10)
  avatar        String?   // Custom avatar URL
  role          Role      @default(VIEWER)
  isActive      Boolean   @default(true)  // For account deactivation (FR6)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts    Account[]
  sessions    Session[]
  invitations Invitation[] @relation("InvitationsSent")
  notes       Note[]       @relation("NotesCreated")
  folders     Folder[]     @relation("FoldersCreated")
  tags        Tag[]
  noteViews   UserNoteView[] @relation("UserNoteViews")  // Story 6.4: Recently viewed notes
  templates   Template[]     @relation("TemplatesCreated") // Story 7.1: Templates
  ownedWorkspaces Workspace[] @relation("WorkspacesOwned") // Story 8.1: Workspaces
  workspaceMemberships WorkspaceMember[] @relation("WorkspaceMemberships") // Story 8.3: Workspace permissions
  folderPermissions FolderPermission[] @relation("FolderPermissions") // Story 8.4: Folder permissions
  versionsCreated NoteVersion[] @relation("VersionsCreated") // Story 9.1: Note versions
  commentsCreated Comment[] @relation("CommentsCreated") // Story 9.4: Comments
  notesLastModified Note[] @relation("NotesLastModified") // Story 10.1: Metrics tracking
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// ============================================
// Password Reset Token (FR3)
// ============================================

model PasswordResetToken {
  id          String   @id @default(cuid())
  token       String   @unique  // Token hashé bcrypt (sécurité si DB compromise)
  tokenPrefix String   @unique  // Premiers 16 chars du token brut (lookup rapide)
  email       String             // Email de l'utilisateur
  expiresAt   DateTime           // Date d'expiration (createdAt + 1h)
  createdAt   DateTime @default(now())

  @@index([email])
  @@index([expiresAt])
}

// ============================================
// Role Enum (RBAC - Global User Role)
// ============================================

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

// ============================================
// WorkspaceRole Enum (Epic 8.3 - Workspace Permissions)
// ============================================

enum WorkspaceRole {
  ADMIN   // Peut gerer workspace + permissions + CRUD notes
  EDITOR  // Peut CRUD notes, pas gerer permissions
  VIEWER  // Lecture seule
}

// ============================================
// Invitation Model (FR5 - User Invitation)
// ============================================

model Invitation {
  id          String    @id @default(cuid())
  email       String    // Email de l'utilisateur invité
  token       String    @unique  // Token unique pour l'invitation
  expiresAt   DateTime  // Date d'expiration (createdAt + 7 jours)
  usedAt      DateTime? // Date d'utilisation (null si non utilisée)
  createdAt   DateTime  @default(now())

  invitedById String
  invitedBy   User      @relation("InvitationsSent", fields: [invitedById], references: [id])

  @@index([email])
  @@index([token])
  @@index([expiresAt])
}

// ============================================
// Folder Model (Story 5.1 - Hierarchical Structure)
// ============================================

model Folder {
  id          String    @id @default(cuid())
  name        String

  // Self-referential hierarchy
  parentId    String?
  parent      Folder?   @relation("FolderHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children    Folder[]  @relation("FolderHierarchy")

  // Notes in this folder
  notes       Note[]

  // Story 8.1: Workspace organization
  workspaceId String?
  workspace   Workspace? @relation("WorkspaceFolders", fields: [workspaceId], references: [id], onDelete: SetNull)

  // Story 8.4: Folder permissions
  isPrivate   Boolean   @default(false)  // Private folder requires explicit permission
  permissions FolderPermission[] @relation("FolderPermissions")

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Ownership
  createdById String
  createdBy   User      @relation("FoldersCreated", fields: [createdById], references: [id], onDelete: Cascade)

  // Unique folder name per user per parent level
  @@unique([createdById, name, parentId])
  @@index([createdById])
  @@index([parentId])
  @@index([workspaceId])
  @@index([isPrivate])
}

// ============================================
// Note Model (Epic 3 - Notes Management)
// ============================================

model Note {
  id           String    @id @default(cuid())
  title        String    @default("Sans titre")
  content      String?   @db.Text     // Markdown content for search and display
  ydoc         Bytes?                  // Y.Doc encoded for collaboration (Epic 4)

  // Story 5.1: Folder organization
  folderId     String?
  folder       Folder?   @relation(fields: [folderId], references: [id], onDelete: SetNull)

  // Story 8.1: Workspace organization
  workspaceId  String?
  workspace    Workspace? @relation("WorkspaceNotes", fields: [workspaceId], references: [id], onDelete: SetNull)

  // Story 3.5: Organization features
  isFavorite   Boolean   @default(false)  // Pin/favorite notes
  sortOrder    Int       @default(0)       // Custom sort order (lower = first)

  // Story 3.5: Soft delete support
  deletedAt    DateTime?                   // Soft delete timestamp (null = not deleted)

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Ownership
  createdById  String
  createdBy    User      @relation("NotesCreated", fields: [createdById], references: [id], onDelete: Cascade)

  // Tags relationship (Story 3.5)
  tags         NoteTag[]

  // Story 6.4: Recently viewed tracking
  views        UserNoteView[] @relation("NoteViews")

  // Story 6.6: Internal links (for backlinks in Story 6.7)
  sourceLinks  NoteLink[] @relation("SourceNote")  // Links from this note to others
  targetLinks  NoteLink[] @relation("TargetNote")  // Links from other notes to this one (backlinks)

  // Story 9.1: Version history
  versions     NoteVersion[] @relation("NoteVersions")

  // Story 9.4: Comments
  comments     Comment[] @relation("NoteComments")

  // Story 10.1: Metrics tracking
  viewCount        Int       @default(0)      // Aggregated unique view count
  lastViewedAt     DateTime?                  // Last consultation timestamp (any user)
  lastModifiedById String?                    // Last user who modified the note
  lastModifiedBy   User?     @relation("NotesLastModified", fields: [lastModifiedById], references: [id], onDelete: SetNull)

  // Full-text search preparation (Epic 6)
  searchVector Unsupported("tsvector")?

  @@index([createdById])
  @@index([createdAt])
  @@index([updatedAt])
  @@index([isFavorite])
  @@index([sortOrder])
  @@index([deletedAt])
  @@index([folderId])
  @@index([workspaceId])
  @@index([viewCount])        // Story 10.1: Sort by popularity
  @@index([lastViewedAt])     // Story 10.1: Sort by recent activity
}

// ============================================
// Tag Model (Story 3.5 - Tags/Categories)
// ============================================

model Tag {
  id        String    @id @default(cuid())
  name      String                        // Tag name (e.g., "work", "personal")
  color     String    @default("#6b7280") // Hex color for UI display

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Ownership - tags are per-user
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Notes relationship
  notes     NoteTag[]

  @@unique([userId, name]) // Tag names unique per user
  @@index([userId])
}

// ============================================
// NoteTag Junction (Many-to-Many)
// ============================================

model NoteTag {
  noteId    String
  tagId     String
  createdAt DateTime @default(now())

  note      Note     @relation(fields: [noteId], references: [id], onDelete: Cascade)
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([noteId, tagId])
  @@index([tagId])
}

// ============================================
// UserNoteView Model (Story 6.4 - Recently Viewed Notes)
// ============================================

model UserNoteView {
  id        String   @id @default(cuid())
  viewedAt  DateTime @default(now())  // Last view timestamp (updated on each view)

  // User who viewed the note
  userId    String
  user      User     @relation("UserNoteViews", fields: [userId], references: [id], onDelete: Cascade)

  // Note that was viewed
  noteId    String
  note      Note     @relation("NoteViews", fields: [noteId], references: [id], onDelete: Cascade)

  // One entry per user+note (upsert on view)
  @@unique([userId, noteId])
  // Optimized index for fetching recent views per user
  @@index([userId, viewedAt(sort: Desc)])
}

// ============================================
// NoteLink Model (Story 6.6 - Internal Links)
// ============================================

model NoteLink {
  id            String   @id @default(cuid())

  // Source note (contains the [[link]])
  sourceNoteId  String
  sourceNote    Note     @relation("SourceNote", fields: [sourceNoteId], references: [id], onDelete: Cascade)

  // Target note (being linked to)
  targetNoteId  String
  targetNote    Note     @relation("TargetNote", fields: [targetNoteId], references: [id], onDelete: Cascade)

  // Display title at time of link creation (for handling renames)
  linkTitle     String?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Unique link per source-target pair
  @@unique([sourceNoteId, targetNoteId])
  // Index for finding backlinks (notes linking TO a target)
  @@index([targetNoteId])
  // Index for finding outgoing links (links FROM a source)
  @@index([sourceNoteId])
}

// ============================================
// Template Model (Epic 7 - Templates)
// ============================================

model Template {
  id          String    @id @default(cuid())
  name        String                        // Nom du template (ex: "Fiche Serveur")
  description String?   @db.Text            // Description du template
  content     String    @db.Text            // Contenu Markdown du template
  icon        String    @default("file-text") // Nom de l'icone (lucide-react)
  isSystem    Boolean   @default(false)     // Templates systeme non-supprimables

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Ownership (peut etre null pour templates systeme seed)
  createdById String?
  createdBy   User?     @relation("TemplatesCreated", fields: [createdById], references: [id], onDelete: SetNull)

  @@index([isSystem])
  @@index([createdById])
}

// ============================================
// Workspace Model (Epic 8 - Workspaces & Permissions)
// ============================================

model Workspace {
  id          String    @id @default(cuid())
  name        String                        // Nom du workspace
  description String?   @db.Text            // Description du workspace
  icon        String    @default("folder")  // Nom de l'icone (lucide-react)
  isPersonal  Boolean   @default(false)     // Espace personnel = non partageable

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Owner (createur du workspace)
  ownerId     String
  owner       User      @relation("WorkspacesOwned", fields: [ownerId], references: [id], onDelete: Cascade)

  // Contenu du workspace
  notes       Note[]    @relation("WorkspaceNotes")
  folders     Folder[]  @relation("WorkspaceFolders")

  // Story 8.3: Membres avec permissions
  members     WorkspaceMember[] @relation("WorkspaceMembers")

  @@index([ownerId])
  @@index([isPersonal])
}

// ============================================
// WorkspaceMember Model (Epic 8.3 - Workspace Permissions)
// ============================================

model WorkspaceMember {
  id          String         @id @default(cuid())
  role        WorkspaceRole  @default(VIEWER)

  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  // Relations
  workspaceId String
  workspace   Workspace      @relation("WorkspaceMembers", fields: [workspaceId], references: [id], onDelete: Cascade)

  userId      String
  user        User           @relation("WorkspaceMemberships", fields: [userId], references: [id], onDelete: Cascade)

  // Un user ne peut etre membre qu'une fois par workspace
  @@unique([workspaceId, userId])
  @@index([workspaceId])
  @@index([userId])
}

// ============================================
// FolderPermission Model (Epic 8.4 - Folder Permissions)
// ============================================

model FolderPermission {
  id          String         @id @default(cuid())
  role        WorkspaceRole  @default(VIEWER)  // Reuses WorkspaceRole: ADMIN, EDITOR, VIEWER

  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  // Target folder
  folderId    String
  folder      Folder         @relation("FolderPermissions", fields: [folderId], references: [id], onDelete: Cascade)

  // User with specific permission
  userId      String
  user        User           @relation("FolderPermissions", fields: [userId], references: [id], onDelete: Cascade)

  // One user can only have one permission per folder
  @@unique([folderId, userId])
  @@index([folderId])
  @@index([userId])
}

// ============================================
// NoteVersion Model (Epic 9 - Version History)
// ============================================

model NoteVersion {
  id          String    @id @default(cuid())
  version     Int                            // Version number (auto-increment per note)
  title       String                         // Title at time of snapshot
  content     String?   @db.Text             // Markdown content at snapshot
  ydoc        Bytes?                         // Y.Doc state at snapshot (for CRDT restoration)

  createdAt   DateTime  @default(now())

  // Reference to the note being versioned
  noteId      String
  note        Note      @relation("NoteVersions", fields: [noteId], references: [id], onDelete: Cascade)

  // Who created this version (snapshot)
  createdById String
  createdBy   User      @relation("VersionsCreated", fields: [createdById], references: [id], onDelete: Cascade)

  // Composite unique: une seule version N par note
  @@unique([noteId, version])
  // Index pour queries par note (historique) - ordered by createdAt desc
  @@index([noteId, createdAt(sort: Desc)])
  // Index pour queries par utilisateur
  @@index([createdById])
}

// ============================================
// Comment Model (Epic 9 - Story 9.4 - Comments Infrastructure)
// ============================================

model Comment {
  id          String    @id @default(cuid())
  content     String    @db.Text             // Comment content (max 5000 chars enforced in Zod)
  anchorStart Int                            // Start position in document (ProseMirror pos)
  anchorEnd   Int                            // End position in document (ProseMirror pos)
  resolved    Boolean   @default(false)      // Whether the comment thread is resolved
  deletedAt   DateTime?                      // Soft delete timestamp

  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Reference to the note being commented on
  noteId      String
  note        Note      @relation("NoteComments", fields: [noteId], references: [id], onDelete: Cascade)

  // Self-relation for nested replies (one-to-many)
  parentId    String?
  parent      Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  replies     Comment[] @relation("CommentReplies")

  // Who created this comment
  createdById String
  createdBy   User      @relation("CommentsCreated", fields: [createdById], references: [id], onDelete: Cascade)

  // Indexes for efficient queries
  @@index([noteId, deletedAt])              // Filter by note and active comments
  @@index([noteId, anchorStart])            // Sort by position in document
  @@index([parentId])                        // Find replies
  @@index([createdById])                     // Find comments by user
}
