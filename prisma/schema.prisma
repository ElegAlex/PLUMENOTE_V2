// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// Auth.js v5 Models
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials provider (hashed with bcrypt cost >= 10)
  avatar        String?   // Custom avatar URL
  role          Role      @default(VIEWER)
  isActive      Boolean   @default(true)  // For account deactivation (FR6)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// ============================================
// Password Reset Token (FR3)
// ============================================

model PasswordResetToken {
  id          String   @id @default(cuid())
  token       String   @unique  // Token hashé bcrypt (sécurité si DB compromise)
  tokenPrefix String   @unique  // Premiers 16 chars du token brut (lookup rapide)
  email       String             // Email de l'utilisateur
  expiresAt   DateTime           // Date d'expiration (createdAt + 1h)
  createdAt   DateTime @default(now())

  @@index([email])
  @@index([expiresAt])
}

// ============================================
// Role Enum (RBAC)
// ============================================

enum Role {
  ADMIN
  EDITOR
  VIEWER
}
