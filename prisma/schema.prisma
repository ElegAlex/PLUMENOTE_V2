// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// Auth.js v5 Models
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials provider (hashed with bcrypt cost >= 10)
  avatar        String?   // Custom avatar URL
  role          Role      @default(VIEWER)
  isActive      Boolean   @default(true)  // For account deactivation (FR6)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts    Account[]
  sessions    Session[]
  invitations Invitation[] @relation("InvitationsSent")
  notes       Note[]       @relation("NotesCreated")
  folders     Folder[]     @relation("FoldersCreated")
  tags        Tag[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// ============================================
// Password Reset Token (FR3)
// ============================================

model PasswordResetToken {
  id          String   @id @default(cuid())
  token       String   @unique  // Token hashé bcrypt (sécurité si DB compromise)
  tokenPrefix String   @unique  // Premiers 16 chars du token brut (lookup rapide)
  email       String             // Email de l'utilisateur
  expiresAt   DateTime           // Date d'expiration (createdAt + 1h)
  createdAt   DateTime @default(now())

  @@index([email])
  @@index([expiresAt])
}

// ============================================
// Role Enum (RBAC)
// ============================================

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

// ============================================
// Invitation Model (FR5 - User Invitation)
// ============================================

model Invitation {
  id          String    @id @default(cuid())
  email       String    // Email de l'utilisateur invité
  token       String    @unique  // Token unique pour l'invitation
  expiresAt   DateTime  // Date d'expiration (createdAt + 7 jours)
  usedAt      DateTime? // Date d'utilisation (null si non utilisée)
  createdAt   DateTime  @default(now())

  invitedById String
  invitedBy   User      @relation("InvitationsSent", fields: [invitedById], references: [id])

  @@index([email])
  @@index([token])
  @@index([expiresAt])
}

// ============================================
// Folder Model (Story 5.1 - Hierarchical Structure)
// ============================================

model Folder {
  id          String    @id @default(cuid())
  name        String

  // Self-referential hierarchy
  parentId    String?
  parent      Folder?   @relation("FolderHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children    Folder[]  @relation("FolderHierarchy")

  // Notes in this folder
  notes       Note[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Ownership
  createdById String
  createdBy   User      @relation("FoldersCreated", fields: [createdById], references: [id], onDelete: Cascade)

  // Unique folder name per user per parent level
  @@unique([createdById, name, parentId])
  @@index([createdById])
  @@index([parentId])
}

// ============================================
// Note Model (Epic 3 - Notes Management)
// ============================================

model Note {
  id           String    @id @default(cuid())
  title        String    @default("Sans titre")
  content      String?   @db.Text     // Markdown content for search and display
  ydoc         Bytes?                  // Y.Doc encoded for collaboration (Epic 4)

  // Story 5.1: Folder organization
  folderId     String?
  folder       Folder?   @relation(fields: [folderId], references: [id], onDelete: SetNull)

  // Story 3.5: Organization features
  isFavorite   Boolean   @default(false)  // Pin/favorite notes
  sortOrder    Int       @default(0)       // Custom sort order (lower = first)

  // Story 3.5: Soft delete support
  deletedAt    DateTime?                   // Soft delete timestamp (null = not deleted)

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Ownership
  createdById  String
  createdBy    User      @relation("NotesCreated", fields: [createdById], references: [id], onDelete: Cascade)

  // Tags relationship (Story 3.5)
  tags         NoteTag[]

  // Full-text search preparation (Epic 6)
  searchVector Unsupported("tsvector")?

  @@index([createdById])
  @@index([createdAt])
  @@index([updatedAt])
  @@index([isFavorite])
  @@index([sortOrder])
  @@index([deletedAt])
  @@index([folderId])
}

// ============================================
// Tag Model (Story 3.5 - Tags/Categories)
// ============================================

model Tag {
  id        String    @id @default(cuid())
  name      String                        // Tag name (e.g., "work", "personal")
  color     String    @default("#6b7280") // Hex color for UI display

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Ownership - tags are per-user
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Notes relationship
  notes     NoteTag[]

  @@unique([userId, name]) // Tag names unique per user
  @@index([userId])
}

// ============================================
// NoteTag Junction (Many-to-Many)
// ============================================

model NoteTag {
  noteId    String
  tagId     String
  createdAt DateTime @default(now())

  note      Note     @relation(fields: [noteId], references: [id], onDelete: Cascade)
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([noteId, tagId])
  @@index([tagId])
}
