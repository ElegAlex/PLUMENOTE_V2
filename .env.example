# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://plumenote:plumenote_dev@localhost:5432/plumenote?schema=public"

# ============================================
# Auth.js Configuration
# ============================================
# Secret key for JWT encryption (min 32 characters)
# Generate with: openssl rand -base64 32
AUTH_SECRET="your-secret-key-here-min-32-chars"

# Base URL for Auth.js callbacks
AUTH_URL="http://localhost:3000"

# Trust the host header in development
# Required when running behind proxies or in Docker
AUTH_TRUST_HOST=true

# ============================================
# Docker Compose Configuration
# ============================================
# PostgreSQL container credentials
POSTGRES_USER=plumenote
POSTGRES_PASSWORD=plumenote_dev
POSTGRES_DB=plumenote

# ============================================
# Application URL
# ============================================
# Public URL for password reset links and other external URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ============================================
# Email Configuration (for production)
# ============================================
# Uncomment and configure for production email sending
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=noreply@plumenote.app

# ============================================
# Optional Configuration
# ============================================
# Logging level: debug, info, warn, error
LOG_LEVEL="info"

# Node environment: development, production, test
NODE_ENV="development"
